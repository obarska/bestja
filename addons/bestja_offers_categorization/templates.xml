<openerp>
    <data>
        <template id="list" name="Oferty">
            <t t-call="website.layout">
                <h1 t-if="category">Kategoria "<t t-esc="category.display_name"/>"</h1>
                <h1 t-if="not category">Wszystkie oferty</h1>
                <ul>
                    <li t-foreach="offers" t-as="offer">
                        <a t-attf-href="{{ offer.get_public_url() }}">
                            <t t-esc="offer.display_name"/>
                        </a>
                    </li>
                </ul>
            </t>
        </template>
    </data>
</openerp>
